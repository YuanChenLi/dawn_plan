<% include header.ejs %>
<div class="container-fluid">
	<div class="row-fluid">
		<div class="span8">
			<form class="form-horizontal" method="post" action="/save">
				<fieldset>
					<legend><%=title%></legend>
                    <input name="id" value="<%= article.id%>" type="hidden">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="title">文章标题</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="title" name="title" type="text" value="<%= article.title%>">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="content">文章内容</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="content" name="content" type="text" value="<%= article.content%>">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="imgUrl">文章图片</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="imgUrl" name="imgUrl" type="text" value="<%= article.imgUrl%>">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                    </div>
				</fieldset>
			<form>
		</div>
	</div>
</div>
<% include footer.ejs %>